rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if the owner is the requester
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper to check if user is a Super Admin
    function isAdmin() {
      return request.auth.token.email in [
        'barneywonghao@gmail.com',
        'barneywong@gmail.com',
        'admin@horizon.finance'
      ];
    }

    match /users/{userId} {
      // Admins can read any user, users can read/write their own
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow write: if isAuthenticated() && (isOwner(userId) || isAdmin());
      
      match /transactions/{transactionId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
      
      match /accounts/{accountId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      match /categories/{categoryId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
      
      match /settings/{settingId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
    }
  }
}
